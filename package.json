{
  "private": true,
  "author": "Chennara Nhes",
  "license": "MIT",
  "scripts": {
    "lint": "eslint {**/*.js,**/*.md} --cache",
    "flow-check": "flow check --include-warnings",
    "test-truesight": "yarn karma start scripts/karma/truesight.karma.config.js",
    "test": "yarn test-truesight",
    "prettify": "prettier --write {**/*.js,**/*.md}",
    "bundle-from-config": "rollup -c scripts/rollup/rollup.config.js",
    "bundle-cjs": "yarn bundle-from-config --environment TARGET:cjs",
    "bundle-esm": "yarn bundle-from-config --environment TARGET:esm",
    "bundle-umd": "yarn bundle-from-config --environment TARGET:umd",
    "bundle-umd-prod": "yarn bundle-from-config --environment TARGET:umd-prod",
    "bundle-all": "npm-run-all -p bundle-cjs bundle-esm bundle-umd bundle-umd-prod",
    "clean": "rimraf **/coverage/ *.log .eslintcache && yarn lerna clean && rimraf node_modules/",
    "bootstrap": "yarn && yarn lerna bootstrap",
    "clean-bootstrap": "yarn clean && yarn bootstrap"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-syntax-async-generators": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.48.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.73.0",
    "husky": "^1.0.0-rc.8",
    "karma": "^2.0.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-rollup-preprocessor": "^6.0.0",
    "karma-sinon": "^1.0.5",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.2",
    "prettier": "1.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.4",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-cleanup": "^3.0.0-beta.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-prettier": "^0.4.0",
    "rollup-plugin-uglify": "^3.0.0",
    "sinon": "^5.0.10"
  }
}
